<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/RLMain"
    >

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/meeleAttack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_marginLeft="25dp"
        android:onClick="meeleAttack" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/spellAttack"
        android:layout_alignTop="@+id/meeleAttack"
        android:layout_toEndOf="@+id/meeleAttack"
        android:layout_marginLeft="25dp"
        android:onClick="spellAttack" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/spellHeal"
        android:layout_alignTop="@+id/spellAttack"
        android:layout_toEndOf="@+id/spellAttack"
        android:layout_marginLeft="25dp"
        android:onClick="spellHeal" />

</RelativeLayout>